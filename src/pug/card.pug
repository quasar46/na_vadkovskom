									.swiper-slide.gallery__pic
										img(src="img/gallery/g1.webp" alt="")
									.swiper-slide.gallery__pic
										img(src="img/gallery/g2.webp" alt="")
									.swiper-slide.gallery__pic
										img(src="img/gallery/g3.webp" alt="")
